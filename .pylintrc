[MASTER]

ignore-paths=src/tests
ignore=single_file_to_ignore.py

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        broad-exception-caught,
        too-few-public-methods,
        too-many-arguments,
        too-many-positional-arguments,
        too-many-locals,
        unused-argument,
        duplicate-code


[FORMAT]

max-line-length=130

